@model Chat

@foreach (var message in Model.Messages)
{

    <div class="card">
        <div class="card-header">
            @message.Sender.FirstName
        </div>
        <div class="card-body">
            <h5 class="card-title">@message.Text</h5>
            <p class="card-text">@message.When</p>
        </div>
    </div>
}
