@model List<WDPR_A.Models.Client>


<div id="listClient">
    <table class="table table-hover">
        <tr>
            <th>Aandoening</th>
            <th>Leeftijd category</th>
            <th>Adres</th>
            <th>Woonplaats</th>
            <th>Deblokkeren</th>
        </tr>
        @foreach (var client in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => client.Condition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => client.AgeCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => client.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => client.Woonplaats)
                </td>
                <td>
                    <button class="btn btn-warning" onsubmit="blockClient() return false;">deblokkeren</button>
                </td>
            </tr>
        }
    </table>
</div>

