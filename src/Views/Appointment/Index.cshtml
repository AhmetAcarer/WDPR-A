            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.496 6.033h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286a.237.237 0 0 0 .241.247zm2.325 6.443c.61 0 1.029-.394 1.029-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94 0 .533.425.927 1.01.927z" />
        </svg></span>

        <input type="email" id="disabledTextInput" class="form-control" placeholder="Email van je ouder(s)/voogd" name="emailOfParent">
      </div>
  </fieldset><br>


  @* NAW gegevens section *@
  
  <div class="mb-3">
    <label for="adressInput" class="form-label">Adres</label>
    <input type="text" class="form-control" asp-validation-for="Adres" aria-describedby="basic-addon1" id="adressInput" name="Adres"  minlength="2" maxlength="40" required>
    <div id="adressHelp" class="form-text">Adres moet ook het huisnummer bevatten</div>
  </div><br>

  <div class="mb-3">
    <label for="woonplaatsInput" class="form-label">Woonplaats</label>
    <input type="text" class="form-control" asp aria-describedby="basic-addon1" id="woonplaatsInput" name="Woonplaats" pattern="^([A-z]+[,.]?[ ]?|[A-z]+['-]?)+$" minlength="2" maxlength="40" required>
    <div id="woonplaatsHelp" class="form-text">Woonplaats moet minstens 2 karakters lang zijn en geen nummers bevatten</div>
  </div><br>



 @* Date and Time picker section *@
  <div class="mb-3"> 
    <div>
      <label for="intakeDateTime" class="form-label">Wanneer wil je het gesprek hebben?</label>
    </div>
    <div>
      <input type="datetime-local" class="intakeDateTime" asp-validation-for="AppointmentDate" name="appointmentDate" required>
    </div>
  </div>
  <button type="submit"  class="btn btn-primary ZMDHButton">Verzenden</button>
</form> 



<script>
  let today = new Date().toISOString().slice(0, 16);

  

  document.getElementsByClassName("intakeDateTime")[0].min = today;


  function change16YearCheckbox () {
    let getAgeCategory = document.getElementById("inputGroupSelectAgeCategory").value;
    let fieldset = document.getElementById("parentEmailFieldSet");

    if (getAgeCategory === "Jongste" || getAgeCategory === "Middelste") {
      fieldset.disabled = false;
    } else {
      fieldset.disabled = true;
    }
  }


</script>  