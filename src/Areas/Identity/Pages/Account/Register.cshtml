@page
@model WDPR_A.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating">
                @if (ViewData["email"] != null)
                {
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" value='@ViewData["email"].ToString()'/>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                }
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                    aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            @if (ViewData["guardianEmail"] != null)
            {
                <h3>Ouder/Voogd</h3>
                <div class="form-floating">
                    <input asp-for="Input2.Email" class="form-control" autocomplete="username" aria-required="true" value='@ViewData["guardianEmail"].ToString()'/>
                    <label asp-for="Input2.Email"></label>
                    <span asp-validation-for="Input2.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input2.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input2.Password"></label>
                    <span asp-validation-for="Input2.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input2.ConfirmPassword" class="form-control" autocomplete="new-password"
                    aria-required="true" />
                    <label asp-for="Input2.ConfirmPassword"></label>
                    <span asp-validation-for="Input2.ConfirmPassword" class="text-danger"></span>
                </div>
            }
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary ZMDHButton">Register</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
